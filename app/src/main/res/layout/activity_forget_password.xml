<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ForgetPasswordActivity"
    android:background="#FFFFFF"> <!-- White background for the entire layout -->

    <EditText
        android:id="@+id/editEmailForget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter email"
        android:backgroundTint="#2563EB"/> <!-- Blue hint color for the EditText -->

    <Button
        android:id="@+id/btnForget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send reset link"
        android:backgroundTint="#2563EB" /> <!-- Blue background for the button -->

</LinearLayout>
